<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SCENARIO SYSTEM "sim/multiModelTrafficSimulatorInput.dtd">

<!-- (c) Martin Treiber, Arne Kesting 2011 -->
<SCENARIO path=".">
  <VEHICLES>
    <!-- vehicle length ==> cell units -->
    <VEHICLE label="BARL1" length="1">
      <!-- b_max not limited -->
      <LONGITUDINAL_MODEL>
        <!-- BARL variant : p_slow_start != p_slowdown -->
        <NSM v0="5" p_slowdown="0.2" p_slow_start="0.4" />
      </LONGITUDINAL_MODEL>
      <LANE_CHANGE_MODEL />
    </VEHICLE>
    <!-- Obstacle is system type. Do not change. -->
    <VEHICLE label="Obstacle" length="0">
      <LONGITUDINAL_MODEL>
        <IDM v0="0" T="1" s0="2" a="1.0" b="1.5" />
      </LONGITUDINAL_MODEL>
      <LANE_CHANGE_MODEL />
    </VEHICLE>
  </VEHICLES>
  <SIMULATION dt="1" duration="7200" fixed_seed="true" seed="42" crash_exit="false">
    <TRAFFIC_COMPOSITION write_fund_diagrams="true">
      <VEHICLE_TYPE label="BARL1" fraction="1" />
    </TRAFFIC_COMPOSITION>
    <!-- scaled units for time and space -->
    <!-- road id 0 indicates mainroad -->
    <ROAD id="0" length="4000" lanes="1">
      <INITIAL_CONDITIONS>
        <IC_MACRO x="2000" rho_per_km="2" v="3" />
      </INITIAL_CONDITIONS>
      <TRAFFIC_SOURCE logging="true">
        <INFLOW t="0" q_per_hour="100" v="11" />
        <INFLOW t="600" q_per_hour="2050" v="9" />
      </TRAFFIC_SOURCE>
      <TRAFFIC_SINK />
      <!-- improve vehicle performance at inflow -->
      <FLOW_CONSERVING_INHOMOGENEITIES />
      <SPEED_LIMITS />
      <SIMPLE_RAMPS>
        <SIMPLE_RAMP x="2000" merge_length="100" logging="true">
          <INFLOW t="0" q_per_hour="550" />
        </SIMPLE_RAMP>
      </SIMPLE_RAMPS>
      <TRAFFIC_LIGHTS />
      <DETECTORS dt="60" logging="true">
        <CROSS_SECTION x="1200" />
        <CROSS_SECTION x="1400" />
        <CROSS_SECTION x="1500" />
        <CROSS_SECTION x="1600" />
        <CROSS_SECTION x="1700" />
        <CROSS_SECTION x="1800" />
        <CROSS_SECTION x="1900" />
        <CROSS_SECTION x="2000" />
        <CROSS_SECTION x="2100" />
      </DETECTORS>
    </ROAD>
    <OUTPUT>
      <SPATIOTEMPORAL dx="10" dt="30" />
    </OUTPUT>
  </SIMULATION>
</SCENARIO>

